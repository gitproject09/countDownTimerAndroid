<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CountDownTextview">
        <attr name="days" format="integer" />
        <attr name="hours" format="integer" />
        <attr name="minute" format="integer" />
        <attr name="second" format="integer" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="showHours" format="boolean" />
        <attr name="showDays" format="boolean" />
        <attr name="start_automatically" format="boolean" />
        <attr name="colonColor" format="color" />
        <attr name="digitBackground" format="reference|color" />
        <attr name="setAnimation" format="boolean" />
        <attr name="showOnlySecond" format="boolean" />
        <attr name="daysLabel" format="string" />
        <attr name="useBanglaNumeral" format="boolean" />
    </declare-styleable>

</resources>